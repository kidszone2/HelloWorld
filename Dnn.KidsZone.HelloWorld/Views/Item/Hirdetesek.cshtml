@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<List<KidsZone.DNN.Dnn.KidsZone.HelloWorld.Models.Item>>


<h2  style="text-decoration: none; color: white; font-weight: bold; background-color: blue; padding: 15px; text-align: center">Eladó legók</h2>

@if (Model != null && Model.Count > 0)
{
    <p>
        Hirdetések száma : @Model.Count
    </p>
    <div style="display:flex; flex-wrap:wrap; justify-content:space-between; align-items:center; flex-direction: row">

        @foreach (var hirdetes in Model)
        {
            <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; flex-basis: 27%; margin: 100px 0 0 0; padding: 30px; border: 2px solid #b5b4b0; min-height: 300px;">
                <p style="text-align:center; font-weight:bold">@hirdetes.ItemName</p>
                <p style="text-align:center">@hirdetes.ItemDescription</p>
                <p>Ár: @(hirdetes.LastModifiedByUserId) Ft</p>
            </div>
        }

    </div>
}
else
{
    <p style="text-decoration: none;  font-weight: bold;  padding: 15px; text-align:center">Nincsenek elérhető hirdetések.</p>
}

<p style="margin: 50px">
    <a style="text-decoration: none; color: white; font-weight: bold; background-color: blue; padding: 15px; " href="@Url.Action("Index", "Item", new {area = "" })">Vissza a főoldalra</a>
</p>


