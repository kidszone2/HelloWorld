@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<KidsZone.DNN.Dnn.KidsZone.HelloWorld.Models.Item>

@{
    ViewBag.Title = "Form Example";
}

<h2>Adj fel hirdetést!</h2>


@if (!string.IsNullOrEmpty(ViewBag.Message))
{
        <p style="color:red">@ViewBag.Message</p>
}

<form action="/Item/HirdetesLetrehozas" method="post" style="margin: 50px">
    @Html.AntiForgeryToken()

    <div>
        <span>Legó neve</span>
        <br />
        @Html.TextBoxFor(model => model.ItemName, new { Style = "background:white;width: 20%;font-size : 16px" })
    </div>

    <div>
        <span>Leírás (Kérjük írja bele az elérhetőséget is!)</span>
        <br />
        @Html.TextBoxFor(model => model.ItemDescription, new { Style = "background:white;width: 20%;font-size : 16px" })
    </div>

    <div>
        <span>Ár</span>
        <br />
        @Html.TextBoxFor(model => model.LastModifiedByUserId, new { Style = "background:white;width: 20%;font-size : 16px" })
        
    </div>
    <br />


    <input style="background-color:black; color:white; padding:15px; font-weight:bold; font-size:20px" type="submit" value="Hírdetés kiírása" />
</form>
<br />
<p style="margin-top: 50px">
    <a style="text-decoration: none; color: white; font-weight: bold; background-color: blue; padding: 15px; " href="@Url.Action("Index", "Item", new {area = "" })">Vissza a főoldalra</a>
</p>