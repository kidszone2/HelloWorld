@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<List<KidsZone.DNN.Dnn.KidsZone.HelloWorld.Models.Item>>


<h2 style="text-decoration: none; color: white; font-weight: bold; background-color: blue; padding: 15px; text-align: center">Saját hirdetéseim</h2>

@if (Model != null && Model.Count > 0)
{

    <div style="display:flex; flex-wrap:wrap; justify-content:space-between; align-items:center; flex-direction: row; margin: 30px">

        @foreach (var hirdetes in Model)
        {
            <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; flex-basis: 27%; margin: 100px 0 0 0; padding: 30px; border: 2px solid #b5b4b0; min-height: 300px;">
                <p style="text-align:center;font-weight:bold">@hirdetes.ItemName</p>
                <p style="text-align:center">@hirdetes.ItemDescription</p>
                <p>@(hirdetes.LastModifiedByUserId != null ? hirdetes.LastModifiedByUserId.ToString() : "N/A")</p>
                <a style="text-decoration:none; color:red; font-weight:bold" href="@Url.Action("Törlés", "Item", new { ItemId = hirdetes.ItemId })">Törlés</a>
    </div>
        }

    </div>
}
else
{
    <p>Nincsenek elérhető hirdetések.</p>
}

<p>
    <a style="text-decoration: none; color: white; font-weight: bold; background-color: black; padding: 15px; margin-top: 50px" href="@Url.Action("Index", "Item", new {area = "" })">Vissza a főoldalra</a>
</p>


